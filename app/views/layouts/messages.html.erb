<!DOCTYPE html>
<html>
  <head>
    <title>Upchat</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar">
      <% if current_user %>
        Welcome back, <%= current_user.name %>. <%= link_to 'Logout', logout_path, method: :delete, data: {confirm: "Are you sure?"} %>
      <% else %>
        <%= link_to 'Register', new_user_path %>
        <%= link_to 'Login', new_session_path %>
      <% end %>
    </div>

    <div class="navbar">
      <%= link_to "New message", new_message_path, class: "nav-link" %>
      <%= link_to "Add friend", friend_ships_new_path, class: "nav-link" %>
      <%= link_to "Sent message", outgoing_messages_path, class: "nav-link" %>
    </div>

    <%= flash_messages %>

    <%= yield %>
  </body>
</html>
