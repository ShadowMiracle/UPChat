<div style="margin-top: 100px"></div>
<div class="col-xs-6">
  <div class="info">
    <div class="info-text"><strong>Owl</strong>Chat</div class="info-text">
    <label>Connecting the people</label>
  </div>
</div>
<div class="col-xs-6">
  <div class="box box-widget">
    <div class="box-body" style="padding: 10px 50px 50px 50px">
      <h1>LOGIN</h1>
      <%= form_tag sessions_path do %>
        <div class="form-group"><%= text_field_tag :email, params[:email], placeholder: "Email", class: "form-control" %></div>
        <div class="form-group"><%= password_field_tag :password, nil, placeholder: "Password", class: "form-control" %></div>
        <div class="form-group"><%= submit_tag "Login", class: "btn btn-primary form-control" %></div>
      <% end %>

      <h4 class="text-center">OR</h4>

      <%= form_tag "/auth/facebook" do %>
        <%= button_tag "Facebook", class: "btn btn-block btn-social btn-facebook form-control" do %>
          <i class="fa fa-facebook"></i>
          <div class="text-center">Login with Facebook</div>
        <% end %>
      <% end %>
    </div>
  </div>

</div>

