<% if conversation.nil? %>
  <div class="friend">
<% else %>
  <div class="friend" id="conversation-<%= conversation.id %>">
<% end %>
  <div class="col-xs-3">
    <% if !user.avatar_url.nil? %>
      <%= image_tag(user.avatar_url) %>
    <% else %>
      <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/245657/1_copy.jpg" />
    <% end %>
  </div>
  <div class="col-xs-7">
    <p>
      <strong><%= user.name %></strong> <i class="fa fa-circle status avaiable"></i><br>
      <span><%= user.email %></span>
    </p>
  </div>
  <div class="col-xs-2">
    <% if !conversation.nil? %>
      <div class="pull-right">
        <div class="badge bg-red"><%= conversation.unread_messages > 0? conversation.unread_messages: '' %></div>
      </div>
    <% end %>
  </div>
</div>
