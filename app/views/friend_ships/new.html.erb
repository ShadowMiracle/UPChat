<div class="container">
<h2>Friends</h2>
<ul>
  <% friend_list.each do |user| %>
    <li>
      <%= render "user", user: user %>
      (<%= link_to "remove", remove_friend_path(:friend_id => user.id), :method => :delete %>)
    </li>
  <% end %>
</ul>

<h2>Add Friends</h2>
<ul>
  <% not_friend_list.each do |user| %>
    <li>
      <%= render "user", user: user %>
      (<%= link_to "Add", add_friend_path(:friend_id => user.id), :method => :post %>)
    </li>
  <% end %>
</ul>

<h2>Friended by Users</h2>
<ul>
  <% current_user.inverse_friends do |user| %>
    <%= render "user", user: user %>
    <%= link_to "Add Friend", add_friend_path(:friend_id => user.id), :method => :post %>
  <% end %>
</ul>
</div>
